<%= form_with(model: feed, local: true, url:confirm_feeds_path) do |form| %>
  <% if feed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feed.errors.count, "error") %> 件のエラーがあります</h2>
      <ul>
      <% feed.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <br />
    <p><%= form.label :写真 %></p>
    <%= image_tag(@feed.image.thumb.url) if @feed.image && @feed.image.url %>
    <%= form.file_field :image %>
    <%= form.text_area :message,size: "30x5",placeholder:"メッセージを入力" %>
  </div>

  <div class="actions">
    <%= form.submit "投稿" %>
  </div>


<% end %>
