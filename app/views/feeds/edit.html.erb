<h1>編集する</h1>
<%= form_with(model: @feed, local: true) do |form| %>
    <% if @feed.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>
        <ul>
        <% @feed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="field">
    <%= form.label :写真 %>
    <%= image_tag(@feed.image.thumb.url) if @feed.image && @feed.image.url %>
    <br />
    <%= form.file_field :image %>
    <%= form.text_area :message,size: "50x4",placeholder:"メッセージを入力" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
